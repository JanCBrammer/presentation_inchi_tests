{
    "name": "Marp",
    "image": "marpteam/marp-cli",
    "customizations": {
        "vscode": {
            "extensions": [
                "marp-team.marp-vscode",
                "streetsidesoftware.code-spell-checker",
                "eamodio.gitlens",
                "GitHub.copilot",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "postCreateCommand": ".devcontainer/post_create.sh"
}